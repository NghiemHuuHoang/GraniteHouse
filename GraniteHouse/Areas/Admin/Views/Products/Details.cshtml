@model GraniteHouse.Models.ModelViews.ProductViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details Produt</h2>

    <div class="p-4 border rounded row">
        <input asp-for="Products.Id" hidden />
       
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="Products.Name"></label>

                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                  
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="Products.Price"></label>

                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                   
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="ProductTypes"></label>

                </div>
                <div class="col-8 ">
                    <input readonly asp-for="Products.ProductTypes.Name" class="form-control"/>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="SpecialTags"></label>

                </div>

                <div class="col-8">
                    <input readonly class="form-control" asp-for="Products.SpecialTag.Name"/>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="Products.ShadeColor"></label>

                </div>
                <div class="col-8">
                    <input asp-for="Products.ShadeColor" readonly class="form-control" />
                    
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 ">
                    <label asp-for="Products.Available"></label>

                </div>
                <div class="col-8">
                    <input  type="checkbox" disabled asp-for="Products.Available"  class="form-control"/>

                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" style="border-radius:4px;border:1px solid #00ffff;width:100%;" />
        </div>
        <br />
        <div class="form-group">
            <a  asp-action="Edit" class="btn btn-primary" value="Edit" asp-route-id="@Model.Products.Id">Edit</a>
            <a class="btn btn-success" asp-action="Index">Back To List</a>
        </div>
    </div>

