
@model GraniteHouse.Models.ProductTypes
@{
    ViewData["Title"] = "Delete";
}


<h2 class="text-info">Delete Produt Types</h2>
<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2 ">
                <label asp-for="Name"></label>

            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" disabled />
                
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Delete" />
            <a class="btn btn-success" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>


