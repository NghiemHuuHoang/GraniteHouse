@model List<GraniteHouse.Models.Products>

@if(Model.Count>0){
<table class="table table-striped" width="100%">
    <tr class="table-info">
        <th style="text-align:center" width="25%"></th>
        <th style="text-align:center">
            <label asp-for="@Model.FirstOrDefault().Name"></label>
        </th>
        <th style="text-align:center">
            <label asp-for="@Model.FirstOrDefault().Price"></label>
        </th>
        <th style="text-align:center">
            <label asp-for="@Model.FirstOrDefault().ShadeColor"></label>
        </th>
        <th style="text-align:center">
            <label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label>
        </th>
        <th style="text-align:center">

        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="padding:50px;">
            <td style="text-align:center;">
                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.Image" with="25%" style="margin:auto;display:block;border-radius:3px; border:1px solid green;" />
                </a>

            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(m => item.Name)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(m => item.Price)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(m => item.ShadeColor)
            </td>
            <td style="text-align:center;">
                @Html.DisplayFor(m => item.ProductTypes.Name)
            </td>
            
        </tr>
    }

</table>
}
else
{
    <div>No Product Item added to the Shopping Cart...</div>
}